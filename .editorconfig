root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 90
trim_trailing_whitespace = true

[*.{md,rmd,mkd,mkdn,mdwn,mdown,markdown}]
# Make the indentation in both ordered and unordered lists line up.
indent_size = 3
indent_style = space
# Markdown uses trailing whitespace to denote that a paragraph wraps.
trim_trailing_whitespace = false
